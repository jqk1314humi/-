{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/advisor",
      "dest": "/public/advisor.html"
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/api-test",
      "dest": "/public/api-test.html"
    },
    {
      "src": "/quick-test",
      "dest": "/public/quick-test.html"
    },
    {
      "src": "/vika-test",
      "dest": "/public/vika-test.html"
    },
    {
      "src": "/simple-vika-test",
      "dest": "/public/simple-vika-test.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
